extends layout

block content
  h1 Fullbloods
  section#mild_west
    .content
      h2.title Mild West
      a(href="http://highdiverecords.com/?band=fullbloods")
        img(src='/images/mild_west_cover.jpg')
      p 
        | Our newest full-length release, available on 
        a(href="http://highdiverecords.com/?band=fullbloods") High Dive Records
        |.
      
      
  section#shows
    .content
      h2.title Shows
      for event in events
        .show
          .date= event.start
          .venue 
            |at 
            if event.url
              a(href=event.url.val)= event.summary
            else
              = event.summary
          .description= event.description
  section#tunes
    .content
      h2.title Tunes
      p
        iframe(width="100%" height="300" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/194428348&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true")
      ul
        li
          a(href="https://open.spotify.com/artist/5cyE8hPu5ZeisPUPmOl9Aw") Spotify
        li
          a(href="https://itunes.apple.com/us/artist/fullbloods/id553368622") iTunes
  section#stuff
    .content
      h2.title Stuff
      p 
        | We're on 
        a(href="http://highdiverecords.com/?band=fullbloods") High Dive Records
      
      ul
        li
          a(href="https://www.facebook.com/fullbloods") Facebook
        li
          a(href="https://twitter.com/fullbloods") Twitter
        li
          a(href="mailto:booking@fullbloods.com") Booking
          
